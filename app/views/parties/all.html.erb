<h4>ALL TABLES</h4>

<h6><%= link_to "OPEN TABLES", parties_path %> | <%= link_to "NEW TABLE", new_party_path %></h6>

<% @parties.each do |party| %>

  <% if !party.is_paid %>
    <div class="table not_paid"><%= link_to( party.table_num, party_orders_path(party.id) ) %></div>
  <% elsif party.is_paid %>
    <div class="table paid"><%= link_to( party.table_num, party_orders_path(party.id) ) %></div>
  <%end%>
<% end %>
