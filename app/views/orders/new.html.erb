<h4>New Order for Table <%= @party.table_num %></h4>


<%= form_for ([@party,@order]) do |f| %>

  <%= f.label :category, "Appetizers:"  %>
  <%= f.collection_select(:item_id, Item.where(category: "Appetizer", active: true), :id, :name ) %>

  <%= f.label :notes  %>
  <%= f.text_field :notes %>

  <br>
  <%= f.submit %>
<% end %>

